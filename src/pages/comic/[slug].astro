---
/**
 * Comic/Webtoon Template
 * Vertical scrolling format (like LINE Webtoon)
 * 800px max width, lazy loading, mobile-first
 */

import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { NotionLoader } from '../../lib/notion-loader';
import { getM3AdditionalProperties } from '../../lib/json-ld';

const { slug } = Astro.params;

const loader = new NotionLoader(
  import.meta.env.NOTION_API_KEY,
  import.meta.env.NOTION_DATABASE_ID,
  { cacheImages: true }
);

const content = await loader.getBySlug(slug as string);

if (!content || content.contentType !== 'comic') {
  return Astro.redirect('/404');
}

// Extract image blocks only for comic format
const imageBlocks = content.blocks.filter(block => block.type === 'image');

// Generate JSON-LD for ComicIssue
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'ComicIssue',
  name: content.title,
  description: content.intentVector.join(', '),
  image: content.heroImage || '',
  datePublished: content.date,
  creator: {
    '@type': 'Person',
    name: 'Sabrina Lin',
    url: 'https://sabrinapause.space'
  },
  publisher: {
    '@type': 'Organization',
    name: 'Sabrina Pause'
  },
  inLanguage: content.language,
  about: content.concepts.map(c => ({
    '@type': 'Thing',
    name: c
  })),
  // Milestone 2: AI-Intent & Sensor Metadata
  // M3: Terroir Counterpoint (ptv, counterpoint, etc.)
  additionalProperty: [
    {
      '@type': 'PropertyValue',
      name: 'SD-Index™',
      value: content.sdIndex,
      description: 'Symbiotic Depth Index (0-10)'
    },
    {
      '@type': 'PropertyValue',
      name: 'Lux Level',
      value: content.lux,
      unitCode: 'LUX'
    },
    {
      '@type': 'PropertyValue',
      name: 'Texture',
      value: content.texture
    },
    {
      '@type': 'PropertyValue',
      name: 'Ambience Noise',
      value: content.noise.join(', ')
    },
    ...getM3AdditionalProperties(content)
  ]
};

export async function getStaticPaths() {
  const loader = new NotionLoader(
    import.meta.env.NOTION_API_KEY,
    import.meta.env.NOTION_DATABASE_ID,
    { cacheImages: true }
  );
  
  const comics = await loader.getAll('comic');
  
  return comics.map((comic) => ({
    params: { slug: comic.slug },
  }));
}
---

<Layout title={content.title} description={content.intentVector.join(' · ')}>
  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

  <div class="comic-reader min-h-screen bg-black">
    
    <!-- Comic Header (Fixed) - Mobile-optimized touch targets -->
    <header class="sticky top-0 z-40 bg-black/95 backdrop-blur-sm border-b border-neutral-800 safe-area-top">
      <div class="max-w-[800px] mx-auto px-4 py-3 sm:py-4">
        <!-- Back Button - 44px min touch target -->
        <nav class="mb-2 sm:mb-3">
          <a href="/" class="comic-back-btn min-h-[44px] min-w-[44px] text-sm text-neutral-400 hover:text-white inline-flex items-center gap-2 py-2 -ml-1 transition-colors">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            <span>Back to gallery</span>
          </a>
        </nav>
        
        <!-- Title & Metadata - Wraps on narrow screens -->
        <div>
          <h1 class="text-xl sm:text-2xl md:text-3xl font-bold text-white mb-1 sm:mb-2 leading-tight">
            {content.title}
          </h1>
          <div class="flex flex-wrap items-center gap-x-2 gap-y-0.5 text-xs sm:text-sm text-neutral-400">
            <span class="uppercase tracking-wide font-medium">{content.webCategory}</span>
            <span class="hidden sm:inline">·</span>
            <time datetime={content.date}>{content.date}</time>
            <span class="hidden sm:inline">·</span>
            <span>{imageBlocks.length} panels</span>
          </div>
        </div>
      </div>
    </header>
    
    <!-- Comic Content - Vertical Scroll, full-bleed panels on mobile -->
    <main class="comic-main max-w-[800px] mx-auto px-0 sm:px-2 pb-16">
      
      <!-- Hero/Cover Image -->
      {content.heroImage && (
        <div class="w-full bg-neutral-900">
          <Image 
            src={content.heroImage} 
            alt={content.title}
            width={content.heroImageWidth ?? 1200}
            height={content.heroImageHeight ?? 800}
            class="w-full h-auto"
            loading="eager"
            fetchpriority="high"
          />
        </div>
      )}
      
      <!-- Comic Panels -->
      <div class="comic-panels">
        {imageBlocks.filter(b => {
          const u = b.image?.file?.url || b.image?.external?.url;
          return u && u.startsWith('/');
        }).map((block, index) => {
          const imageUrl = block.image?.file?.url || block.image?.external?.url;
          const caption = block.image?.caption?.[0]?.plain_text;
          
          return (
            <div class="comic-panel" data-panel={index + 1}>
              <Image 
                src={imageUrl} 
                alt={caption || `Panel ${index + 1}`}
                width={block.image?.file?.width ?? content.panels?.[index]?.width ?? 800}
                height={block.image?.file?.height ?? content.panels?.[index]?.height ?? 600}
                loading={index < 3 ? 'eager' : 'lazy'}
                class="w-full h-auto block"
              />
              {caption && (
                <div class="panel-caption">
                  {caption}
                </div>
              )}
            </div>
          );
        })}
      </div>
      
      <!-- End Card - Responsive padding -->
      <div class="mt-8 px-4 sm:px-6">
        <div class="bg-neutral-900 rounded-lg p-6 sm:p-8 text-center border border-neutral-800">
          <div class="text-4xl mb-4">✨</div>
          <h2 class="text-xl font-bold text-white mb-2">End of Episode</h2>
          <p class="text-neutral-400 mb-6">Thanks for reading!</p>
          
          <!-- Metadata -->
          {content.concepts.length > 0 && (
            <div class="flex gap-2 flex-wrap justify-center mb-6">
              {content.concepts.map((concept) => (
                <span class="text-xs px-3 py-1.5 bg-neutral-800 text-neutral-300 rounded-full border border-neutral-700">
                  {concept}
                </span>
              ))}
            </div>
          )}
          
          <div class="flex flex-col gap-3 text-sm text-neutral-500">
            <div>
              <span class="font-medium">Location:</span> {content.location.name}
            </div>
            <div>
              <span class="font-medium">SD-Index™:</span> {content.sdIndex}/10
            </div>
          </div>
          
          <!-- Navigation - Touch-friendly 44px min -->
          <div class="mt-8 pt-6 border-t border-neutral-800">
            <a 
              href="/" 
              class="inline-block min-h-[48px] px-8 py-3 flex items-center justify-center bg-white text-black font-medium rounded-lg hover:bg-neutral-100 active:bg-neutral-200 transition-colors touch-manipulation"
            >
              Back to Gallery
            </a>
          </div>
        </div>
      </div>
      
    </main>
    
    <!-- Reading Progress Bar - Below header, safe area aware -->
    <div id="progress-bar" class="fixed left-0 h-0.5 sm:h-1 bg-white z-50 transition-all duration-200 progress-bar" style="width: 0%"></div>
    
  </div>
</Layout>

<style>
  /* Comic Reader - Mobile-first */
  .comic-reader {
    background: #000;
    color: #fff;
    -webkit-overflow-scrolling: touch; /* Smooth momentum scroll on iOS */
  }
  
  /* Safe area for notch/home indicator */
  .safe-area-top {
    padding-top: max(0.75rem, env(safe-area-inset-top, 0px));
  }
  .comic-main {
    padding-bottom: calc(4rem + env(safe-area-inset-bottom, 0px));
  }
  
  /* Progress bar: fixed below safe area on mobile */
  #progress-bar.progress-bar {
    top: 0;
  }
  @supports (padding-top: env(safe-area-inset-top)) {
    #progress-bar.progress-bar {
      top: env(safe-area-inset-top, 0);
    }
  }
  
  .comic-panels {
    display: flex;
    flex-direction: column;
    gap: 0;
  }
  
  .comic-panel {
    width: 100%;
    background: #000;
    position: relative;
  }
  
  .comic-panel img {
    display: block;
    width: 100%;
    height: auto;
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
    vertical-align: middle; /* Prevents minor CLS */
  }
  
  .panel-caption {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.9), transparent);
    padding: 1.5rem 0.75rem 0.75rem;
    font-size: 0.8125rem;
    color: #d4d4d4;
    text-align: center;
    line-height: 1.4;
  }
  @media (min-width: 640px) {
    .panel-caption {
      padding: 2rem 1rem 1rem;
      font-size: 0.875rem;
    }
  }
  
  /* Touch-friendly, prevent double-tap zoom on buttons */
  .comic-back-btn {
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
  }
</style>

<script>
  // Reading progress bar
  window.addEventListener('scroll', () => {
    const winScroll = document.documentElement.scrollTop || document.body.scrollTop;
    const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
    const scrolled = (winScroll / height) * 100;
    
    const progressBar = document.getElementById('progress-bar');
    if (progressBar) {
      progressBar.style.width = scrolled + '%';
    }
  });
  
  // Lazy loading intersection observer (for older browsers)
  if ('IntersectionObserver' in window) {
    const imageObserver = new IntersectionObserver((entries, observer) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const img = entry.target as HTMLImageElement;
          if (img.dataset.src) {
            img.src = img.dataset.src;
            img.removeAttribute('data-src');
            observer.unobserve(img);
          }
        }
      });
    }, {
      rootMargin: '50px 0px', // Start loading 50px before entering viewport
      threshold: 0.01
    });
    
    // Observe all comic panel images
    document.querySelectorAll('.comic-panel img[data-src]').forEach(img => {
      imageObserver.observe(img);
    });
  }
</script>
