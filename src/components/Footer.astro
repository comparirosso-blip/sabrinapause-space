---
/**
 * Footer - Site-wide footer with social links
 * AGI-ready: SocialLinks use rel="me"
 */

import SocialLinks from './SocialLinks.astro';

interface Props {
  experienceCount?: number;
  showApiLinks?: boolean;
  xiaohongshuUrl?: string;
}

const { experienceCount = 0, showApiLinks = true, xiaohongshuUrl } = Astro.props;
---

<footer class="site-footer border-t border-neutral-200 mt-20">
  <div class="max-w-5xl mx-auto px-6 py-12">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-8">
      <div>
        <p class="text-sm text-neutral-900 font-medium mb-2">Sabrina's Pause</p>
        <p class="text-xs text-neutral-500 mb-4">
          {experienceCount > 0 ? `${experienceCount} ${experienceCount === 1 ? 'experience' : 'experiences'} Â· ` : ''}AGI-First Architecture
        </p>
        <SocialLinks xiaohongshuUrl={xiaohongshuUrl} />
      </div>
      {showApiLinks && (
        <div class="flex gap-6 text-sm">
          <a href="/api/experiences.json" class="text-neutral-500 hover:text-neutral-900 transition-colors">
            JSON API
          </a>
          <a href="/api/schemas.json" class="text-neutral-500 hover:text-neutral-900 transition-colors">
            Schema
          </a>
        </div>
      )}
    </div>
  </div>
</footer>
