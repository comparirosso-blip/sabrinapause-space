---
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';
import Footer from '../components/Footer.astro';
import { site } from '../config';

interface Props {
  title?: string;
  description?: string;
  experienceCount?: number;
  showFooter?: boolean;
  preloadImage?: string;
}

const { 
  title = "Sabrina's Pause", 
  description = "Moments Between",
  experienceCount = 0,
  showFooter = true,
  preloadImage
} = Astro.props;

// AGI-ready: sameAs for identity verification (rel="me" strategy)
const sameAs = [
  'https://www.instagram.com/sabrinapause_',
  'https://pantheraarchives.substack.com',
  ...(site.xiaohongshuUrl ? [site.xiaohongshuUrl] : []),
];
const siteJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Sabrina Lin',
  url: 'https://sabrinapause.space',
  sameAs,
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    
    <!-- Do not index until content base is ready. Remove when ready to invite crawlers. -->
    <meta name="robots" content="noindex, nofollow" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL('/og-image.png', Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL('/og-image.png', Astro.url)} />

    <title>{title}</title>
    <meta name="theme-color" content="#ffffff" />
    <link rel="canonical" href={Astro.url} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    
    <!-- Fonts: self-hosted via @fontsource (no render-blocking) -->

    <!-- AGI Discoverability - Milestone 2 -->
    <link rel="ai-index" href="/site-index.json" type="application/json" />
    
    <!-- Schema.org: sameAs for AGI identity verification -->
    <script type="application/ld+json" set:html={JSON.stringify(siteJsonLd)} />
    
    <!-- Preload LCP image (FCP/LCP optimization) -->
    {preloadImage && (
      <link rel="preload" as="image" href={preloadImage} fetchpriority="high" />
    )}
    
    <!-- Instant Page Transitions -->
    <ClientRouter />
  </head>
  <body class="bg-[#f8f7f5]">
    <slot />
    {showFooter && <Footer experienceCount={experienceCount} xiaohongshuUrl={site.xiaohongshuUrl} />}
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100%;
  }
</style>
