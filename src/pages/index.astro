---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { NotionLoader } from '../lib/notion-loader';

// Fetch content to display
const loader = new NotionLoader(
  import.meta.env.NOTION_API_KEY,
  import.meta.env.NOTION_DATABASE_ID,
  { cacheImages: true }
);

const allContent = await loader.getAll();

// Sort by date descending (latest first)
const sortedContent = [...allContent].sort(
  (a, b) => new Date(b.date).getTime() - new Date(a.date).getTime()
);

// Extract unique categories for dynamic navigation
const categories = [...new Set(allContent.map(c => c.webCategory).filter(Boolean))].sort();

// Category icons for filter buttons
const categoryIcons: Record<string, string> = {
  journal: 'ğŸ“„',
  podcast: 'ğŸ™ï¸',
  episodes: 'ğŸ¨',
};
---

<Layout 
  title="Sabrina's Pause" 
  description="Moments Between â€” A Digital Archive"
  experienceCount={allContent.length}
  preloadImage={sortedContent[0]?.heroImage}
>
  <div class="min-h-screen bg-white">
    
    <!-- Header - Logo links to Home -->
    <header class="border-b border-neutral-200">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 py-8 sm:py-12">
        <a href="/" class="inline-block group">
          <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-neutral-900 mb-2 group-hover:text-neutral-600 transition-colors tracking-tight">
            Sabrina's Pause
          </h1>
          <p class="text-base sm:text-lg text-neutral-600">
            Moments Between
          </p>
        </a>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-6xl mx-auto px-4 sm:px-6 py-8 sm:py-12">
      
      <!-- Filter Navigation - Clickable category icons -->
      {allContent.length > 0 && (
        <div class="flex flex-wrap gap-2 sm:gap-3 mb-8 sm:mb-10 pb-6 border-b border-neutral-200">
          <button class="filter-btn active min-h-[44px] px-4 py-2 rounded-full bg-neutral-900 text-white text-sm font-medium transition-colors touch-manipulation flex items-center gap-2" data-filter="all">
            <span>âœ¦</span> All ({allContent.length})
          </button>
          {categories.map(category => (
            <button class="filter-btn min-h-[44px] px-4 py-2 rounded-full bg-neutral-100 text-neutral-700 hover:bg-neutral-200 text-sm font-medium transition-colors touch-manipulation flex items-center gap-2" data-filter={category.toLowerCase()}>
              <span>{categoryIcons[category.toLowerCase()] || 'â€¢'}</span>
              {category} ({allContent.filter(c => c.webCategory === category).length})
            </button>
          ))}
        </div>
      )}
      
      {allContent.length === 0 ? (
        <div class="text-center py-20">
          <p class="text-neutral-400 text-lg">No content published yet</p>
        </div>
      ) : (
        <>
          <!-- Featured Section - Latest entry -->
          <section class="mb-12 sm:mb-16">
            {sortedContent.map((content, idx) => {
              if (idx !== 0) return null;
              const contentUrl = `/${content.contentType}/${content.slug}`;
              return (
                <article class="content-item featured-item" data-category={content.webCategory.toLowerCase()}>
                  <a href={contentUrl} class="block group rounded-xl overflow-hidden border border-neutral-200 hover:border-neutral-400 transition-colors bg-white">
                    <div class="grid md:grid-cols-2 gap-0">
                      <div class="aspect-[16/10] md:aspect-auto md:min-h-[320px] bg-neutral-100">
                        {content.heroImage ? (
                          <Image 
                            src={content.heroImage} 
                            alt={content.title}
                            width={content.heroImageWidth ?? 800}
                            height={content.heroImageHeight ?? 600}
                            class="w-full h-full object-cover group-hover:opacity-95 transition-opacity"
                            loading="eager"
                            fetchpriority="high"
                          />
                        ) : (
                          <div class="w-full h-full flex items-center justify-center">
                            <span class="text-6xl opacity-40">
                              {content.contentType === 'article' ? 'ğŸ“„' : content.contentType === 'comic' ? 'ğŸ¨' : 'ğŸ™ï¸'}
                            </span>
                          </div>
                        )}
                      </div>
                      <div class="p-6 sm:p-8 flex flex-col justify-center">
                        <span class="text-xs font-medium text-neutral-500 uppercase tracking-wider mb-2">{content.webCategory}</span>
                        <h2 class="text-2xl sm:text-3xl font-bold text-neutral-900 mb-3 group-hover:text-neutral-600 transition-colors">
                          {content.title}
                        </h2>
                        <p class="text-neutral-600 mb-4 line-clamp-2">
                          {Array.isArray(content.intentVector) ? content.intentVector.join(' Â· ') : content.intentVector}
                        </p>
                        <div class="flex flex-wrap gap-4 text-sm text-neutral-500">
                          <span>{content.date}</span>
                          <span>{content.location.name}</span>
                          <span>SD-Index {content.sdIndex}/10</span>
                        </div>
                      </div>
                    </div>
                  </a>
                </article>
              );
            })}
          </section>
          
          <!-- Content Grid - 2-3 columns -->
          <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
            {sortedContent.map((content, idx) => {
              if (idx === 0) return null; // Featured already shown
              const contentUrl = `/${content.contentType}/${content.slug}`;
              return (
              <article class="group content-item" data-category={content.webCategory.toLowerCase()}>
                <a href={contentUrl} class="block h-full rounded-xl overflow-hidden border border-neutral-200 hover:border-neutral-400 transition-colors bg-white">
                  <div class="aspect-[4/3] bg-neutral-100">
                    {content.heroImage ? (
                      <Image 
                        src={content.heroImage} 
                        alt={content.title}
                        width={content.heroImageWidth ?? 400}
                        height={content.heroImageHeight ?? 300}
                        class="w-full h-full object-cover group-hover:opacity-95 transition-opacity"
                        loading="lazy"
                      />
                    ) : (
                      <div class="w-full h-full flex items-center justify-center">
                        <span class="text-5xl opacity-40">
                          {content.contentType === 'article' ? 'ğŸ“„' : content.contentType === 'comic' ? 'ğŸ¨' : 'ğŸ™ï¸'}
                        </span>
                      </div>
                    )}
                  </div>
                  <div class="p-4 sm:p-5">
                    <span class="text-xs font-medium text-neutral-500 uppercase tracking-wide">{content.webCategory}</span>
                    <h3 class="mt-2 font-bold text-neutral-900 group-hover:text-neutral-600 transition-colors line-clamp-2">
                      {content.title}
                    </h3>
                    <p class="mt-2 text-sm text-neutral-500 line-clamp-2">
                      {Array.isArray(content.intentVector) ? content.intentVector.join(' Â· ') : content.intentVector}
                    </p>
                    <div class="mt-3 flex flex-wrap gap-3 text-xs text-neutral-400">
                      <span>{content.date}</span>
                      <span>{content.location.name}</span>
                      <span>{content.sdIndex}/10</span>
                    </div>
                  </div>
                </a>
              </article>
            )})}
          </section>
          
          <!-- Empty State -->
          <div id="empty-state" class="hidden py-32 text-center">
            <div class="text-4xl mb-4">ğŸŒªï¸</div>
            <h3 class="text-xl font-bold text-neutral-900 mb-2">Stillness Found</h3>
            <p class="text-neutral-500">No moments match this specific category yet.</p>
            <button onclick="document.querySelector('[data-filter=\'all\']').click()" class="mt-6 text-sm font-bold border-b-2 border-neutral-900 pb-1">Reset Filters</button>
          </div>

          <!-- Pagination Placeholder -->
          <div class="flex justify-center gap-4 py-8 border-t border-neutral-200">
            <span class="px-4 py-2 bg-neutral-900 text-white rounded">1</span>
            <span class="px-4 py-2 text-neutral-400">of 1</span>
          </div>
        </>
      )}

    </main>
  </div>
</Layout>

<script>
  function filterContent() {
    const buttons = document.querySelectorAll('.filter-btn');
    const items = document.querySelectorAll('.content-item');
    const emptyState = document.getElementById('empty-state');

    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        const filter = btn.getAttribute('data-filter') || 'all';
        let visibleCount = 0;

        // Update UI
        buttons.forEach(b => {
          b.classList.remove('active', 'bg-neutral-900', 'text-white');
          b.classList.add('bg-neutral-100', 'text-neutral-700');
        });
        btn.classList.add('active', 'bg-neutral-900', 'text-white');
        btn.classList.remove('bg-neutral-100', 'text-neutral-700');

        // Filter items with fade
        items.forEach(item => {
          const el = item as HTMLElement;
          const category = el.getAttribute('data-category');
          
          el.style.opacity = '0';
          
          setTimeout(() => {
            if (filter === 'all' || category === filter) {
              el.style.display = 'block';
              visibleCount++;
              setTimeout(() => { el.style.opacity = '1'; }, 20);
            } else {
              el.style.display = 'none';
            }
            
            // Toggle empty state
            if (emptyState) {
              emptyState.style.display = visibleCount === 0 ? 'block' : 'none';
            }
          }, 150);
        });
      });
    });
  };

  // Run on initial load and when returning via View Transitions (ClientRouter)
  // DOMContentLoaded = first visit; astro:page-load = client-side nav back to home
  document.addEventListener('DOMContentLoaded', filterContent);
  document.addEventListener('astro:page-load', filterContent);
</script>

<style>
  .content-item {
    transition: opacity 0.3s ease-in-out;
  }
</style>
