---
/**
 * Podcast Template - Overhauled for M2 Refinement
 * Supports multiple audio files, accurate durations, and simplified layout.
 */

import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { NotionLoader } from '../../lib/notion-loader';
import { renderBlocks } from '../../lib/block-renderer';
import { getM3AdditionalProperties } from '../../lib/json-ld';

const { slug } = Astro.params;

const loader = new NotionLoader(
  import.meta.env.NOTION_API_KEY,
  import.meta.env.NOTION_DATABASE_ID,
  { cacheImages: true }
);

const content = await loader.getBySlug(slug as string);

if (!content || content.contentType !== 'podcast') {
  return Astro.redirect('/404');
}

const counterpointItems = content.counterpointIds?.length
  ? await loader.getByPageIds(content.counterpointIds)
  : [];

// Filter blocks to exclude audio files that are already displayed in the top list
const audioUrls = content.audioFiles.map(f => f.url);
const filteredBlocks = content.blocks.filter(b => {
  if (['audio', 'video', 'file'].includes(b.type)) {
    const url = b.audio?.file?.url || b.audio?.external?.url || b.file?.file?.url || b.video?.file?.url;
    // If this URL is already in our top list, filter it out
    return !audioUrls.includes(url);
  }
  return true;
});

const renderedContent = renderBlocks(filteredBlocks);

// Generate JSON-LD for PodcastEpisode
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'PodcastEpisode',
  name: content.title,
  description: content.intentVector.join(', '),
  image: content.heroImage || '',
  datePublished: content.date,
  creator: {
    '@type': 'Person',
    name: 'Sabrina Lin',
    url: 'https://sabrinapause.space'
  },
  audio: content.audioFiles.length > 0 ? {
    '@type': 'AudioObject',
    contentUrl: content.audioFiles[0].url,
    encodingFormat: 'audio/mpeg'
  } : undefined,
  partOfSeries: {
    '@type': 'PodcastSeries',
    name: 'Sabrina Pause Podcast'
  },
  inLanguage: content.language,
  // Milestone 2: AI-Intent & Sensor Metadata
  // M3: Terroir Counterpoint (ptv, counterpoint, etc.)
  additionalProperty: [
    {
      '@type': 'PropertyValue',
      name: 'SD-Index‚Ñ¢',
      value: content.sdIndex,
      description: 'Symbiotic Depth Index (0-10)'
    },
    {
      '@type': 'PropertyValue',
      name: 'Lux Level',
      value: content.lux,
      unitCode: 'LUX'
    },
    {
      '@type': 'PropertyValue',
      name: 'Texture',
      value: content.texture
    },
    ...getM3AdditionalProperties(content)
  ]
};

export async function getStaticPaths() {
  const loader = new NotionLoader(
    import.meta.env.NOTION_API_KEY,
    import.meta.env.NOTION_DATABASE_ID,
    { cacheImages: true }
  );
  const podcasts = await loader.getAll('podcast');
  return podcasts.map((p) => ({ params: { slug: p.slug } }));
}
---

<Layout title={content.title} description={content.intentVector.join(' ¬∑ ')}>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

  <article class="min-h-screen bg-[#f8f7f5] pb-20">
    
    <!-- Header -->
    <header class="max-w-4xl mx-auto px-6 pt-12">
      <nav class="text-sm text-neutral-500 mb-8">
        <a href="/" class="inline-flex items-center gap-2 hover:text-neutral-900 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to all experiences
        </a>
      </nav>

      <div class="flex items-center gap-3 mb-6 text-sm text-neutral-500">
        <span class="px-3 py-1 bg-purple-100 text-purple-700 rounded-full font-medium uppercase tracking-wide text-xs">
          üéôÔ∏è {content.webCategory}
        </span>
        {content.date && (<><span>¬∑</span><span>Date: <time datetime={content.date} class="text-neutral-600">{content.date}</time></span></>)}
      </div>
      
      <h1 class="font-serif text-5xl md:text-6xl font-semibold text-neutral-900 mb-6 leading-tight">
        {content.title}
      </h1>
    </header>

    <!-- Main Player & Metadata Section -->
    <div class="max-w-4xl mx-auto px-6 space-y-8">
      
      <!-- Audio Players List -->
      <div class="space-y-4">
        {content.audioFiles.length > 0 ? (
          content.audioFiles.map((file, index) => (
            <div class="bg-white rounded-2xl shadow-sm border border-neutral-200 p-6 flex flex-col md:flex-row gap-6 items-center">
              {index === 0 && content.heroImage && (
                <div class="flex-shrink-0 w-full md:w-32 h-32 bg-neutral-100 rounded-lg overflow-hidden border border-neutral-100 flex items-center justify-center">
                  <Image 
                    src={content.heroImage} 
                    alt="" 
                    width={content.heroImageWidth ?? 128}
                    height={content.heroImageHeight ?? 128}
                    class="w-full h-full object-cover"
                    loading="eager"
                  />
                </div>
              )}
              <div class="flex-1 w-full space-y-4">
                <div class="flex justify-between items-start">
                  <div>
                    <span class="text-xs font-bold text-neutral-400 uppercase tracking-widest block mb-1">
                      {index === 0 ? "Main Feature" : `Clip ${index + 1}`}
                    </span>
                    <h3 class="text-xl font-bold text-neutral-800">{file.title || content.title}</h3>
                  </div>
                  <div class="text-sm font-mono text-neutral-400 bg-neutral-50 px-2 py-1 rounded duration-label" data-index={index}>
                    --:--
                  </div>
                </div>
                
                <audio 
                  controls 
                  class="w-full podcast-player" 
                  data-index={index}
                >
                  <source src={file.url} type="audio/mpeg" />
                </audio>

                {index === 0 && (
                  <div class="flex items-center gap-3 text-sm">
                    <span class="text-neutral-500 font-medium">Speed:</span>
                    <div class="flex p-1 bg-neutral-100 rounded-lg">
                      {[0.75, 1, 1.25, 1.5, 2].map(speed => (
                        <button 
                          class={`speed-btn px-3 py-1 rounded-md text-xs transition-all ${speed === 1 ? 'bg-white shadow-sm text-neutral-900' : 'text-neutral-500 hover:text-neutral-800'}`}
                          data-speed={speed}
                        >
                          {speed}x
                        </button>
                      ))}
                    </div>
                  </div>
                )}
              </div>
            </div>
          ))
        ) : (
          <div class="bg-yellow-50 border border-yellow-200 p-8 rounded-2xl text-center">
            <p class="text-yellow-800">‚ö†Ô∏è No audio clips attached in Notion yet.</p>
          </div>
        )}
      </div>

      <!-- Metadata Section - Full Width Horizontal Dashboard -->
      <div class="space-y-8 pt-10 border-t border-neutral-200">
        
        <!-- Row 1: Full Width Observation Bar (only show when at least one stat has a value) -->
        {(content.sdIndex != null || content.lux != null || content.location?.name) && (
        <div class="bg-white rounded-3xl border border-neutral-200 shadow-sm overflow-hidden divide-y md:divide-y-0 md:divide-x divide-neutral-100 flex flex-col md:flex-row">
          <!-- Label Section -->
          <div class="bg-neutral-50/50 px-8 py-4 flex items-center justify-center md:justify-start">
            <h4 class="text-[10px] font-bold text-neutral-400 uppercase tracking-widest whitespace-nowrap">Observation Stats</h4>
          </div>
          
          <!-- Metrix Section (only show fields that have values) -->
          <div class="flex-1 grid grid-cols-2 md:grid-cols-3 divide-x divide-neutral-100">
            {content.sdIndex != null && (
              <div class="px-8 py-6 text-center md:text-left group">
                <div class="text-[9px] text-neutral-400 uppercase mb-2 group-hover:text-neutral-600 transition-colors">SD-Index‚Ñ¢</div>
                <div class="text-4xl font-black text-neutral-900 leading-none">{content.sdIndex}<span class="text-sm text-neutral-400 font-normal ml-1">/10</span></div>
              </div>
            )}
            {content.lux != null && (
              <div class="px-8 py-6 text-center md:text-left group">
                <div class="text-[9px] text-neutral-400 uppercase mb-2 group-hover:text-neutral-600 transition-colors">Lux Level</div>
                <div class="text-4xl font-black text-neutral-900 leading-none">{content.lux} LUX</div>
              </div>
            )}
            {content.location?.name && (
              <div class="px-8 py-6 text-center md:text-left group col-span-2 md:col-span-1 border-t md:border-t-0 border-neutral-100">
                <div class="text-[9px] text-neutral-400 uppercase mb-2 group-hover:text-neutral-600 transition-colors">Point of Origin</div>
                <div class="text-base font-bold text-neutral-800 flex items-center justify-center md:justify-start gap-3">
                  <div class="w-3 h-3 rounded-full bg-purple-500 shadow-[0_0_10px_rgba(168,85,247,0.4)] animate-pulse"></div>
                  {content.location.name}
                </div>
              </div>
            )}
          </div>
        </div>
        )}

        <!-- Row 2: Full Width Cognitive Vector -->
        {content.intentVector.length > 0 && (
          <div class="bg-neutral-900 rounded-3xl p-8 text-white shadow-xl overflow-hidden relative group">
            <div class="absolute -right-20 -top-20 w-64 h-64 bg-purple-500/10 rounded-full blur-3xl group-hover:bg-purple-500/20 transition-all duration-700"></div>
            <div class="relative z-10">
              <div class="flex items-center gap-4 mb-8">
                <div class="h-px bg-neutral-800 flex-1"></div>
                <h4 class="text-[10px] font-bold text-neutral-500 uppercase tracking-widest opacity-70">Cognitive Vector Stream</h4>
                <div class="h-px bg-neutral-800 flex-1"></div>
              </div>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                {content.intentVector.map((v, i) => (
                  <div class="flex gap-4 text-sm font-mono leading-relaxed group/item border-l border-neutral-800 pl-4 py-2 hover:border-purple-500 transition-all">
                    <span class="text-purple-500 font-bold opacity-40">0{i + 1}</span>
                    <span class="text-neutral-300 group-hover/item:text-white transition-colors">{v}</span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        )}

        <!-- Row 3: Tags Horizontal Strip -->
        {content.concepts.length > 0 && (
          <div class="flex flex-wrap items-center gap-3 py-6 px-8 bg-neutral-50 rounded-2xl border border-neutral-200 border-dashed">
            <span class="text-[10px] font-bold text-neutral-400 uppercase tracking-widest mr-4">Tags</span>
            {content.concepts.map(t => (
              <span class="text-[11px] px-3 py-1.5 bg-white text-neutral-600 rounded-lg border border-neutral-200 uppercase font-bold tracking-wider hover:border-purple-300 hover:text-purple-600 transition-all cursor-default shadow-sm">
                #{t}
              </span>
            ))}
          </div>
        )}

        <!-- Row 4: Counterpoint - Linked content -->
        {counterpointItems.length > 0 && (
          <div class="space-y-6">
            <h4 class="text-lg font-bold text-neutral-900">Counterpoint</h4>
            <div class="grid gap-4 sm:grid-cols-2">
              {counterpointItems.map((item) => {
                const itemUrl = `/${item.contentType}/${item.slug}`;
                return (
                  <a href={itemUrl} class="group flex gap-4 p-4 rounded-xl border border-neutral-200 hover:border-neutral-400 transition-colors bg-white">
                    <div class="flex-shrink-0 w-20 h-20 rounded-lg overflow-hidden bg-neutral-100">
                      {item.heroImage ? (
                        <Image 
                          src={item.heroImage} 
                          alt={item.title}
                          width={80}
                          height={80}
                          class="w-full h-full object-cover"
                          loading="lazy"
                        />
                      ) : (
                        <div class="w-full h-full flex items-center justify-center text-2xl opacity-40">
                          {item.contentType === 'article' ? 'üìÑ' : item.contentType === 'comic' ? 'üé®' : 'üéôÔ∏è'}
                        </div>
                      )}
                    </div>
                    <div class="min-w-0 flex-1">
                      <span class="text-xs font-medium text-neutral-500 uppercase">{item.contentType}</span>
                      <h3 class="font-serif font-semibold text-neutral-900 group-hover:text-neutral-600 truncate">{item.title}</h3>
                      <p class="text-sm text-neutral-500 line-clamp-2 mt-0.5">
                        {item.intentVector?.length > 0 ? item.intentVector.join(' ¬∑ ') : (item.contentType === 'podcast' ? 'Listen' : item.contentType === 'comic' ? 'View episode' : 'Read')}
                      </p>
                    </div>
                  </a>
                );
              })}
            </div>
          </div>
        )}

        <!-- Row 5: Main Content Area -->
          <div id="transcript" class="hidden prose-sabrina py-4">
            <div set:html={content.transcript.replace(/\n/g, '<br />')} />
          </div>

      </div>

    </div>
  </article>
</Layout>

<style>
  .prose :global(h1), .prose :global(h2), .prose :global(h3) {
    color: #171717;
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-weight: 800;
  }
  .prose :global(p) {
    color: #404040;
    line-height: 1.8;
  }
  
  audio::-webkit-media-controls-panel {
    background: #f8fafc;
  }
</style>

<script>
  // Client-side Duration Detection
  document.querySelectorAll('.podcast-player').forEach(player => {
    const audio = player as HTMLAudioElement;
    const index = player.getAttribute('data-index');
    const label = document.querySelector(`.duration-label[data-index="${index}"]`);

    audio.onloadedmetadata = () => {
      if (label) {
        const minutes = Math.floor(audio.duration / 60);
        const seconds = Math.floor(audio.duration % 60);
        label.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;
      }
    };
  });

  // Unified Speed Control
  document.querySelectorAll('.speed-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const speed = parseFloat(btn.getAttribute('data-speed') || '1');
      
      // Update all players
      document.querySelectorAll('audio').forEach(p => {
        (p as HTMLAudioElement).playbackRate = speed;
      });

      // Update UI active state
      document.querySelectorAll('.speed-btn').forEach(b => {
        b.classList.remove('bg-white', 'shadow-sm', 'text-neutral-900');
        b.classList.add('text-neutral-500');
      });
      btn.classList.add('bg-white', 'shadow-sm', 'text-neutral-900');
      btn.classList.remove('text-neutral-500');
    });
  });
</script>
