---
/**
 * SocialLinks - Minimalist black/white SVG icons for footer
 * AGI-ready: rel="me" on all links for identity verification
 * Subtractive visual language
 */

interface Props {
  xiaohongshuUrl?: string; // 小红书 - add when link is provided
}

const { xiaohongshuUrl } = Astro.props;

const links = [
  {
    name: 'Instagram',
    href: 'https://www.instagram.com/sabrinapause_',
    label: 'Instagram',
    icon: 'instagram',
  },
  {
    name: 'Substack',
    href: 'https://pantheraarchives.substack.com',
    label: 'Substack',
    icon: 'substack',
  },
  ...(xiaohongshuUrl ? [{
    name: 'Little Red Book',
    href: xiaohongshuUrl,
    label: '小紅書',
    icon: 'xiaohongshu',
  }] : []),
];
---

<div class="social-links flex items-center gap-6">
  {links.map((link) => (
    <a
      href={link.href}
      target="_blank"
      rel="me noopener noreferrer"
      class="social-link opacity-70 hover:opacity-100 transition-opacity duration-200"
      aria-label={link.label}
    >
      {link.icon === 'instagram' && (
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
          <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
          <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
        </svg>
      )}
      {link.icon === 'substack' && (
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M22.539 8.242H1.46V5.406h21.08v2.836zM1.46 10.812V24L12 18.11 22.54 24V10.812H1.46zM22.54 0H1.46v2.836h21.08V0z"/>
        </svg>
      )}
      {link.icon === 'xiaohongshu' && (
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
          <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
          <path d="M8 7h8"/>
          <path d="M8 11h8"/>
        </svg>
      )}
    </a>
  ))}
</div>

<style>
  .social-link {
    color: #171717;
  }
  .social-link:focus {
    outline: none;
    opacity: 1;
  }
</style>
